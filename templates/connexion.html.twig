{% extends 'layout.html.twig' %}

{% block title %}
	Connexion | MangaFoot Stats
{% endblock %}

{% block meta %}
	<meta name="description" content="Connexion">
{% endblock %}


{% block body %}
    <header>
		<div class="nav-top-conatainer bg-[#001B3D] flex justify-center">
			<div class="nav-top flex justify-center align-center w-[1440px] h-[40px]">
				<div class="flex flex-row items-center">
					<div class="w-[80px] h-[20px] mr-5">
						<a href="/bluelock/accueil"><img class="w-full h-full" src={{ asset('img/bluelocklogo.png') }} alt="logo BlueLock"></a>
					</div>
					<div class="w-[80px] h-[20px] mr-5">
						<a href=""><img class="w-full h-full" src={{ asset('img/Aoashi_logo.png') }} alt="logo Aoashi"></a>
					</div>
					<div class="w-[80px] h-[20px] mr-5">
						<a href=""><img class="w-full h-full" src={{ asset('img/Captain_Tsubasa.png') }} alt="logo Captain Tsubasa"></a>
					</div>
				</div>
				<div class="nav-top-login flex flex-row items-center hover:bg-blue-800 rounded-xl">
			</div>
		</div>
	</header>

    <main>
        <section class="connexion-container flex justify-center items-center bg-[#001B3D] h-[80%]">
            <div class="w-full max-w-[1440px] text-white">
                {% for message in app.flashes('compte-error') %}
                <div class="message-error">
                    <p>{{message}}</p>
                </div>
                {% endfor %}
                <div class="flex flex-row justify-center items-center max-xl:flex-col"> 
                    <div class="w-[552px] h-[320px] max-md:w-[352px] max-md:h-[180px]">
                        <img class="w-full h-full" src={{ asset('img/logo-MFS-xl.png') }} alt="logo MangaFoot Stats">
                    </div>
                    <div class="connexion-form flex flex-col justify-center items-center p-10">
                        <h1 class="text-5xl mb-10 max-md:hidden">Connexion</h1>
                            {{ form_start(form) }}

                            <div class="flex flex-col justify-center items-center mb-5">
                                {{ form_label(form.email) }}
                                {{ form_widget(form.email , {'attr': {'class': 'form-input'}, full_name:'email'}) }}
                                <div class="error text-red-500 text-xs">
                                    {{ form_errors(form.email) }}
                                </div>
                            </div>

                            <div class="flex flex-col justify-center items-center mb-5">
                                {{ form_label(form.password) }}
                                {{ form_widget(form.password, {'attr': {'class': 'form-input'}, full_name:'password'}) }}
                                <div class="error text-red-500 text-xs">
                                    {{ form_errors(form.password) }}
                                </div>
                            </div>

                            {{ form_end(form) }}
                        <p>Pas encore inscrit ? <a href="/inscription">Inscrivez-vous</a></p>
                    </div>
                </div>
            </div>
        </section>
    </main>
    
{% endblock %}
