							<div class="w-[150px] h-[150px] overflow-hidden rounded-full">
								<img class="w-full h-full object-cover" src="{{ asset('img/Paris_X_Gen.webp') }}" alt="logo du Paris X Gen">
							</div>
							<p class="mt-4 font-bold">Paris X Gen</p>
						</div>
					</a>
				{% endfor %}
			</div>
		</div>
