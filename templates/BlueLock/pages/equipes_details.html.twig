{% extends 'BlueLock/layout.html.twig' %}

{% block title %}
	BlueLock - Nom_Equipe | MangaFoot Stats
{% endblock %}

{% block meta %}
	<meta name="description" content="Statistiques BlueLock">
{% endblock %}

{% block js %}
	<script src={{ asset('js/button.js') }} defer></script>
{% endblock %}

{% block body %}
	<section class="details-container bg-[#001B3D] h-[253px] flex flex-row items-center justify-center">
		<div class="flex flex-row max-md:flex-col items-center w-full max-w-[1440px] text-white max-md:items-start">
			<div class="w-36 h-44 mr-3">
				<img src={{ asset('img/Paris_X_Gen.webp') }} alt="logo du Paris X Gen" class="w-full h-full">
			</div>
			<p class="text-5xl">Paris X Gen</p>
		</div>
	</section>

	<section class="links-container flex flex-col items-center justify-center bg-white">
		<div class="flex flex-col w-full max-w-[1440px] text-black">
			<div class="h-[42px] w-full max-w-[1440px] flex items-center  max-sm:h-14 max-sm:flex-wrap">
				<a class="p-1 mr-5 hover:bg-blue-700 hover:text-white" href="/bluelock/equipes/details">Accueil</a>
				<a class="p-1 mr-5 hover:bg-blue-700 hover:text-white" href="/bluelock/equipes/details/matchs">Matchs</a>
				<a class="p-1 mr-5 hover:bg-blue-700 hover:text-white" href="/bluelock/equipes/details/stats">Stats</a>
				<a class="p-1 mr-5 hover:bg-blue-700 hover:text-white" href="/bluelock/equipes/details/effectif">Effectif</a>
			</div>
		</div>
	</section>

	<hr class="h-1 bg-[#D9D9D9]">

	<section class="infos-container flex flex-col items-center justify-center bg-white">
		<div class="flex flex-col w-full max-w-[1440px] text-black">
			<div class="m-2 border-2 border-black rounded-md mb-10 ">
				<div class="flex flex-col p-5">
					<div class="flex flex-row justify-between">
						<h1 class="text-[28px] max-md:text-base mb-8">Statistiques clés</h1>
						<a href="/bluelock/joueurs/details/stats">Voir toutes les stats</a>
					</div>
					<div class="flex flex-row justify-between max-md:flex-col">
						<div class="flex flex-row">
							<div class="border-2 border-black p-1 w-[100px] h-24 flex flex-col items-center justify-center rounded-full max-md:w-[200px] max-md:h-44">
								<p class="text-5xl">0</p>
								<h2 class="text-xs text-[#AEAEAE]">Matchs joués</h2>
							</div>
							<div class="flex flex-col mt-3 ml-5 max-md:justify-center">
								<div class="flex flex-row items-center">
									<p class="mr-2">0</p>
									<div class="w-2 h-2 rounded-full bg-blue-800 mr-2"></div>
									<p>Victoires</p>
								</div>
								<div class="flex flex-row items-center">
									<p class="mr-2">0</p>
									<div class="w-2 h-2 rounded-full bg-green-700 mr-2"></div>
									<p>Matchs nuls</p>
								</div>
								<div class="flex flex-row items-center">
									<p class="mr-2">0</p>
									<div class="w-2 h-2 rounded-full bg-red-700 mr-2"></div>
									<p>Défaites</p>
								</div>
							</div>
						</div>
						<div class="flex flex-row flex-wrap w-[800px] max-md:w-[400px]">
							<div class="flex flex-col w-[200px] max-md:w-44 mb-10">
								<p class="text-5xl">0</p>
								<h2 class="text-xs text-[#AEAEAE]">Buts</h2>
							</div>
							<div class="flex flex-col w-[200px] max-md:w-44 mb-10">
								<p class="text-5xl">0</p>
								<h2 class="text-xs text-[#AEAEAE]">Passes décisives</h2>
							</div>
							<div class="flex flex-col w-[200px] max-md:w-44 mb-10">
								<p class="text-5xl">0</p>
								<h2 class="text-xs text-[#AEAEAE]">Precision de dribbles (%)</h2>
							</div>
							<div class="flex flex-col w-[200px] max-md:w-44 mb-10">
								<p class="text-5xl">0</p>
								<h2 class="text-xs text-[#AEAEAE]">Precision de passes (%)</h2>
							</div>
							<div class="flex flex-col w-[200px] max-md:w-44 mb-10">
								<p class="text-5xl">0</p>
								<h2 class="text-xs text-[#AEAEAE]">Ballons récupérés</h2>
							</div>
							<div class="flex flex-col w-[200px] max-md:w-44 mb-10">
								<p class="text-5xl">0</p>
								<h2 class="text-xs text-[#AEAEAE]">Ballons perdus
								</h2>
							</div>
							<div class="flex flex-col w-[200px] max-md:w-44 mb-10">
								<p class="text-5xl">0</p>
								<h2 class="text-xs text-[#AEAEAE]">Buts concédés
								</h2>
							</div>
							<div class="flex flex-col w-[200px] max-md:w-44 mb-10">
								<div class="flex flex-row items-center">
									<div class="w-4 h-8 bg-yellow-300"></div>
									<p class="text-5xl">0</p>
								</div>
								<h2 class="text-xs text-[#AEAEAE]">Cartons jaunes</h2>
							</div>
							<div class="flex flex-col w-[200px] max-md:w-44 mb-10">
								<div class="flex flex-row items-center">
									<div class="w-4 h-8 bg-red-500"></div>
									<p class="text-5xl">0</p>
								</div>
								<h2 class="text-xs text-[#AEAEAE]">Cartons rouges</h2>
							</div>
						</div>
					</div>

				</div>
			</div>
		</div>
	</section>

	<section class="players-container flex flex-col justify-center items-center pt-5 pb-16 bg-white">
		<div class="flex flex-col justify-between w-full max-w-[1440px] border-2 border-black rounded-md">
			<div class="flex justify-center">
				<h1 class="text-2xl">Effectifs</h1>
			</div>
			<div class="item-container w-[100%] max-w-[1440px] scrollbar">
				<div class="overflow-x-auto flex flex-row items-center space-x-5">
					{% for i in 0..nombres %}
						<a href="/bluelock/joueurs/details">
							<div class="player-item flex flex-col items-center justify-center w-[190px] h-[285px] bg-[#D9D9D9] rounded-3xl text-black">
								<div class="w-[150px] h-[150px] overflow-hidden rounded-full">
									<img class="w-full h-full object-cover" src="{{ asset('img/isagi.jpg') }}" alt="Isagi Yoichi">
								</div>
								<p class="mt-4 font-bold">Isagi</p>
								<p class="text-gray-500">Yoichi</p>
							</div>
						</a>
					{% endfor %}
				</div>
			</div>
		</div>
	</section>
{% endblock %}
