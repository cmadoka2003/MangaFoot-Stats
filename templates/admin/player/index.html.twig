<!DOCTYPE html>

<title>Player index</title>

{% block body %}
    <h1>Player index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Avatar</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Age</th>
                <th>Birthdate</th>
                <th>Height</th>
                <th>Position_favorite</th>
                <th>Country</th>
                <th>Number</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for player in players %}
            <tr>
                <td>{{ player.id }}</td>
                <td>{{ player.avatar }}</td>
                <td>{{ player.firstname }}</td>
                <td>{{ player.lastname }}</td>
                <td>{{ player.age }}</td>
                <td>{{ player.birthdate }}</td>
                <td>{{ player.height }}</td>
                <td>{{ player.positionFavorite }}</td>
                <td>{{ player.country }}</td>
                <td>{{ player.number }}</td>
                <td>
                    <a href="{{ path('app_player_show', {'id': player.id}) }}">show</a>
                    <a href="{{ path('app_player_edit', {'id': player.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_player_new') }}">Create new</a>
{% endblock %}
