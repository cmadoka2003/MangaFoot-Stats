<!DOCTYPE html>

<title>Arcs</title>

{% block body %}
    <h1>Arcs</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ arc.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ arc.name }}</td>
            </tr>
        </tbody>
    </table>

    {% for teams in arc.getTeams() %}
        <p>Teams: {{ teams.name }}</p>
        <p>Country: {{ teams.country }}</p>
        <p>Tactics: {{ teams.tactics }}</p>
        <p>Logo: {{ teams.logo }}</p>
        <br>
        <br>
    {% else %}
        <p>There are no teams</p>
    {% endfor %}

    <a href="{{ path('app_arcs_index') }}">back to list</a>

    <a href="{{ path('app_arcs_edit', {'id': arc.id}) }}">edit</a>

    {{ include('admin/arcs/_delete_form.html.twig') }}
{% endblock %}
