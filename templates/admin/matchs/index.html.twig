<!DOCTYPE html>

<title>Matchs index</title>

{% block body %}
    <h1>Matchs index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>TeamHomeScore</th>
                <th>TeamAwayScore</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for match in matchs %}
            <tr>
                <td>{{ match.id }}</td>
                <td>{{ match.teamHomeScore }}</td>
                <td>{{ match.teamAwayScore }}</td>
                <td>
                    <a href="{{ path('app_matchs_show', {'id': match.id}) }}">show</a>
                    <a href="{{ path('app_matchs_edit', {'id': match.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_matchs_new') }}">Create new</a>
{% endblock %}
